---
import Layout from "@/layouts/Layout.astro";
import db from "@/cra-project/assert/db.json";

const players = db.players.sort((a, b) => Number(b.rare) - Number(a.rare));
---

<Layout title="角色列表">
  <section class="p-4">
    <h1 class="text-2xl font-bold mb-4">角色列表</h1>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 2xl:grid-cols-8 gap-4">
      {
        players.map((player) => (
          <div
            class="bg-white rounded-xl shadow p-2 text-center"
          >
            <img
              src={player.imgUrl}
              alt={player.name}
              class="w-full aspect-square object-cover rounded"
            />
            <div class="mt-2 font-semibold">{player.name}</div>
            <div class="text-sm text-gray-500">{player.rare}★</div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
